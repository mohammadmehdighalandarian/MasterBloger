@page
@using Mb.Domain.ArticleAgg
@model Mb.Presentation.MVCCore.Areas.Administrator.Pages.ArticleManagement.EditModel
@{
}
<div class="card">
    <div class="card-header">
        <h2>Edit Article : @Model.Article.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Article.id" />
                    <div class="col-md-6 col-sm-12">

                        <div class="form-group">
                            <label asp-for="Article.Title" class="control-label">Title:</label>
                            <input asp-for="Article.Title" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Article.Image" class="control-label">Image:</label>
                            <input asp-for="Article.Image" class="form-control" />
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Article.ShortDiscreption" class="control-label">ShortDiscreption:</label>
                            <textarea asp-for="Article.ShortDiscreption" class="form-control">@Model.Article.ShortDiscreption</textarea>
                            
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Article.Content" class="control-label">Content:</label>
                            <textarea asp-for="Article.Content" class="form-control">@Model.Article.Content</textarea>
                            
                        </div>

                        <div class="form-group">
                            <label asp-for="Article.ArticleCategoryId" class="control-label">Article Category:</label>
                            <select asp-items="Model.ArticleCategories" asp-for="Article.ArticleCategoryId" class="form-control">
                                <option selected disabled hidden>@Model.Article.ArticleCategory</option>
                                
                            </select>
                        </div>


                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
